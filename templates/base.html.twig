<!doctype html>
<html lang="fr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Exemple e-commerce symfony 5">
    <meta name="author" content="HF-dev h.ferrache">
    <meta name="generator" content="Jekyll v4.1.1">
    <title>{% block title %}e-shop{% endblock %}</title>

    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
        }

        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
        }
    </style>

    <link href="https://bootswatch.com/5/lux/bootstrap.min.css" rel="stylesheet">    
    <link href="{{ asset("assets/css/carousel.css") }}" rel="stylesheet">
    <link href="{{ asset('assets/css/main.css')}}" rel="stylesheet">
    <link href="{{ asset("assets/css/product_detail.css") }}" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&family=Mukta:wght@500&family=Rubik:wght@600&display=swap" rel="stylesheet">
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('pics/marijuana.png') }}" />
  
    {% block stylesheets %}  {% endblock %} 
</head>
<body id="top-point">

<main class="container-fluid px-0" style="" role="main">
    {% include "incs/_nav.html.twig" %}
    {% if block('carousel') is defined %}
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
            {% for key, header in headers %}
                <div class="carousel-item {% if key == 0 %} active {% endif %}" style="background: url('uploads/{{header.image}}'); background-size: cover;">
                    <div class="container">
                        <div class="carousel-caption text-right">
                            <h1 class="fwt-bolder {% if key == (1 or 2) %} text-white {% endif %}">{{header.title}}</h1>
                            <p class="hoverx fwt-bolder">{{header.content}}</p>
                            <p class="{% if key == 2 %} text-start {% else %} text-end {% endif %} hoverx"><a href="{{header.btnUrl}}" class="btn btn-lg btn-light" href="#" role="button">{{header.btnTitle}}</a></p>
                        </div>
                    </div>
                </div>
            {% endfor %}    
            </div>
             <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    {% endif %}
  

<div class="container marketing {% if block('carousel') is not defined %} mt-5 {% endif %}" style="min-height: 85vh !important;"> 
{% include "incs/_notifications.html.twig" %}
{% block body %} {% endblock %}
</div> 


{% include "incs/_footer.html.twig" %}

{% block javascripts %} {% endblock %}
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://kit.fontawesome.com/dc01741cf6.js" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>
<script>
       function placeFooter() {
        if( $(document.body).height() < $(window).height() ) {
            $("footer").css({position: "fixed", bottom:"0px", right:"0px", left:"0px"});

        } else {
            $("footer").css({position: ""});
        }
    }

    placeFooter();
</script>
</body>
</html>