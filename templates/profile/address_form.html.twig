{% extends 'base.html.twig' %}

{% block title %}CBD - Ajouter une adresse{% endblock %}

{% block body %}

<div class="container my-5 mx-auto">

    <h3 class="mt-5 mb-3 text-center">Ajouter une adresse</h3>
    <hr>
    {{ form_start(form)}}
    <div class="row col-md-10 mx-auto">
            <div class="col-md-6">{{ form_row(form.firstname)}}</div>
            <div class="col-md-6">{{ form_row(form.lastname)}}</div>
            <div class="col-md-6">{{ form_row(form.company)}}</div>
            <div class="col-md-6">{{ form_row(form.name)}}</div>
            <div class="col-md-12">{{ form_row(form.adress)}}</div>
            <div class="col-md-6">{{ form_row(form.postal)}}</div>
            <div class="col-md-6">{{ form_row(form.city)}}</div>
            <div class="col-md-6">{{ form_row(form.country)}}</div>
            <div class="col-md-6">{{ form_row(form.phone)}}</div>
            <div class="col-md-12 text-center">{{ form_row(form.submit)}}</div>
     </div>   
     {{ form_end(form)}} 
</div>
<hr>
<a class="text-dark font-weight-bolder" href="{{ path("app_profile_address") }}">Revenir Ã  mes adresse</a>

{% endblock %}