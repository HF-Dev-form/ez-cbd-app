{% extends 'base.html.twig' %}

{% block title %}CBD Shop - Mes adresses{% endblock %}

{% block body %}

<section class="vh-80 container mx-auto" style="">
    <h3 class="text-center">Mes adresses</h3>
        <hr>
        {% if app.user.adresses|length == 0 %}
            <p>Vous n'avez pas encore ajouter d'adresse. Pour ajouter une adresse, veuillez <b><a href="{{ path('app_profile_address_add') }}" class="text-dark font-italic" href="">cliquer ici</a></b></p>
        {% endif %}

        <div class="row mx-auto text-center my-5">
        {% for address in addresses %}
            <div class="card rounded shadow-sm col-md-3 m-1" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{address.name|upper}}</h5>
                        <p class="card-text">
                            {{address.adress}},<br>
                            {{address.postal}} {{address.city}} {{address.country}}
                        </p>
                        <p class="card-text">{{address.phone}}</p>
                        <div class="row justify-content-between px-2">
                            <a href="{{ path('app_profile_address_update', { 'id' : address.id}) }}" class="">Modifier</a>
                            <a href="{{ path('app_profile_address_remove', { 'id' : address.id}) }}" class="text-danger">Supprimer</a>
                        </div>
                    </div>
            </div>
        {% endfor %}   
        </div>
        <div class="">
            <a href="{{ path('app_profile_address_add') }}" class="text-dark font-weight-bolder"><b>+</b> Ajouter une adresse</a>
        </div>
    <a class="text-dark font-weight-bolder" href="{{ path("app_profile") }}">Revenir sur mon profile</a>

</section>


{% endblock %}
