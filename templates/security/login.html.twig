{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

<div class="container mx-auto col-md-7 mt-3">

{% if error %}
    <div class="alert alert-danger col-md-5 mx-auto text-center my-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

{% if app.user %}
    <div class="mb-3">
        Vous êtes connecté sur cette adresse:
        {{ app.user.userIdentifier }},
        <a href="{{ path('app_logout') }}">Deconnexion</a>
    </div>
{% endif %}

<h1 class="h3 text-center">Veuillez vous connecter</h1>
<div class="card px-5 rounded shadow-sm">
    <form method="post" class="px-4 py-2">
        <label for="inputEmail">Email</label>
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" autofocus>
        <label for="inputPassword">Mot de passse</label>
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password">

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}">

            <div class="checkbox my-3 font-italic">
            <label>
                <input type="checkbox" class="" name="_remember_me"> Se souvenir de moi
            </label>
            <hr>
            <small class="fst-italic text-info">Nouvel utilisateur? <a href="{{ path('app_register') }}">Créer un compte </a> <hr>
                Mot de passe oublié? <a class="" href="{{ path('app_reset_password') }}">Réinitialiser mon mot de passe</a></small>
            </div>
        <button class="btn btn-primary my-2 text-center" type="submit">
            Se connecter
        </button>
    </form>
</div>
</div>
{% endblock %}
