{% extends 'base.html.twig' %}

{% block title %}CBD EZ - Commande {% endblock %}

{% block body %}
<div class="container">
    <h1 class="h3 text-center">Passer votre commande</h1>
    <p class="text-center">Veuillez préciser vos préférences de livraison avant de passer votre commande</p>
    <hr>
    <div class="row bg-white text-dark p-2 rounded shadow-sm">
        <div class="div col-md-6" style="background-color: #f5fcf8">
        <h5 class="my-3">Récapitulatif de commande</h5>
        {% for products in cart %}
            <div class="row mb-2">
                <div class="col-2">
                    <img style="max-height:" src="/uploads/{{products.product.illustration}}" class="img-fluid rounded" alt="Cotton T-shirt">
                </div>
                <div class="col-8 font-weight-bold">
                    {{ products.product.name }} <br>
                    <small>{{ products.product.subtitle }} </small>
                </div>
                <div class="col-2">
                   x {{ products.qty}}
                </div>
            </div>
            <hr>
        {% endfor %}
        </div>
         <div class="div col-md-6">
                {{form_start(form, {action:path('app_orders_add')})}}            
                    {{form_row(form.addresses, {"label" : "Choisissez votre adresse"})}}
                        <div class="text-center mb-2"> <a href="{{ path('app_profile_address_add') }}">Ajouter une nouvelle adresse</a> </div>
                    {{form_row(form.carriers)}}
                {{form_end(form)}}
        </div>
    </div>
</div>

<style>
    .form-check{
        background-color: #f5fcf8;
        padding: 20px 50px !important;
        margin: 8px;
        font-weight: bold; 
    }
</style>
{% endblock %}

