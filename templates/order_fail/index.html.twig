{% extends 'base.html.twig' %}

{% block title %}Hello OrderFailController!{% endblock %}

{% block body %}
<div class="container">
   <div class="row">
      <div class="col-md-6 mx-auto">
         <div class="payment">
            <div class="payment_header bg-danger">
               <div class="check"><i class="fa fa-check" aria-hidden="true"></i></div>
            </div>
            <div class="content">
               <h1>Annulation de paiement</h1>
               <p>
                    Bonjour, <strong>{{order.user.firstname}}</strong> <strong>{{order.user.lastname}}</strong>
                    <br>
                    Il semblerait que votre paiement pour la commande <strong>{{order.reference}}</strong> a échoué.
               </p>
               <hr>
                <p>
                    Votre pouvez revenir dans votre panier et choisir une autre moyen de paiement.
                  
                </p>
               <a class="btn btn-success m-2" href="{{ path('app_orders') }}">Revenir sur le panier</a>
            </div>   
         </div>
      </div>
   </div>
</div>

{% block stylesheets %} 
    <link href="{{ asset("assets/css/success-payment.css") }}" rel="stylesheet">
{% endblock %}
{% endblock %}
